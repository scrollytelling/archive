{
  "name": "scrollies",
  "private": true,
  "version": "1.0.0",
  "description": "Archive of Scrollytellings",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "bulma": "^0.6.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "pug-cli": "^1.0.0-alpha6"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-build": "node-sass _sass/main.scss css/main.css",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-postcss": "postcss --use autoprefixer --output css/main.css css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "build": "npm run css-deploy && npm run build:js && npm run html-build",
    "build:js": "echo",
    "watch:js": "npm run build:js -- --watch",
    "start": "npm run css-watch | npm run watch:js | npm run html-watch",
    "html-build": "pug --obj ../entries/hu.scrollytelling.io/index.json --pretty index.pug",
    "deploy": "npm run build && rm -rf ../entries/hu.scrollytelling.io/js ../entries/hu.scrollytelling.io/css && cp -r css index.html humans.txt js ../entries/hu.scrollytelling.io",
    "html-watch": "npm run html-build -- --watch"
  },
  "keywords": [
    "scrollytelling",
    "pageflow",
    "story",
    "multimedia",
    "video",
    "audio"
  ],
  "author": "Joost Baaij <joost@spacebabies.nl>",
  "license": "ISC"
}
