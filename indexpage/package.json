{
  "name": "scrollies",
  "version": "1.0.0",
  "description": "Archive of Scrollytellings",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.6.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "pug-cli": "^1.0.0-alpha6"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-build": "node-sass _sass/main.scss overview/css/main.css",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-postcss": "postcss --use autoprefixer --output overview/css/main.css overview/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "build": "npm run css-deploy && npm run js-build && npm run html-build",
    "js-build": "babel _javascript --out-dir overview/js",
    "js-watch": "npm run js-build -- --watch",
    "start": "npm run css-watch | npm run js-watch | npm run html-watch",
    "html-build": "pug --obj ../entries/hu.scrollytelling.io/index.json --pretty index.pug",
    "deploy": "npm run build && rm -rf ../entries/hu.scrollytelling.io/overview && mv overview ../entries/hu.scrollytelling.io/ && cp index.html humans.txt ../entries/hu.scrollytelling.io/",
    "html-watch": "npm run html-build -- --watch"
  },
  "keywords": [
    "scrollytelling",
    "pageflow",
    "story",
    "multimedia",
    "video",
    "audio"
  ],
  "author": "Joost Baaij <joost@spacebabies.nl>",
  "license": "ISC"
}
