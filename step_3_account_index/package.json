{
  "name": "scrollies",
  "private": true,
  "version": "1.0.0",
  "description": "Scrollytelling archive builder",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "bulma": "^0.6.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "pug-cli": "^1.0.0-alpha6"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "node-sass _sass/main.scss css/main.css",
    "build:js": "echo",
    "build:html": "pug --obj ../entries/hu.scrollytelling.io/index.json --pretty index.pug",
    "build": "npm run deploy:css && npm run build:js && npm run build:html",
    "deploy:css": "npm run build:css && npm run postcss",
    "postcss": "postcss --use autoprefixer --output css/main.css css/main.css",
    "watch:css": "npm run build:css build:html-- --watch",
    "watch:js": "npm run build:js -- --watch",
    "start": "npm run watch:css | npm run watch:js | npm run watch:html",
    "watch:html": "npm run build:html -- --watch"
  },
  "keywords": [
    "scrollytelling",
    "pageflow",
    "story",
    "multimedia",
    "video",
    "audio"
  ],
  "author": "Joost Baaij <joost@spacebabies.nl>",
  "license": "ISC"
}
